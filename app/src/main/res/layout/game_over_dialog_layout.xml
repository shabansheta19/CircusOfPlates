<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent"
    android:id="@+id/dialog_layout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/score_text_view"
        android:background="@color/colorAccent"
        android:text="Score"
        android:textColor="#ffffff"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/restart_dialog_button"
        android:background="@drawable/button_restart"
        android:layout_below="@+id/score_text_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exit_game_over_button"
        android:layout_below="@+id/restart_dialog_button"
        android:background="@drawable/button_main_menu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>